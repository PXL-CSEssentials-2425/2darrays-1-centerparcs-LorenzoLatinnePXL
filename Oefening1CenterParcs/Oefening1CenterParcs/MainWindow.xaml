<Window x:Class="Oefening1CenterParcs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oefening1CenterParcs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Background="LightGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Background="White" Margin="5">
            <TextBlock Text="Center Parcs" FontSize="40" Foreground="LimeGreen" Margin="5"  HorizontalAlignment="Center"></TextBlock>
            
            <TextBlock HorizontalAlignment="Left" Margin="5">Type woning</TextBlock>
            <ComboBox Name="typeWoningComboBox" Margin="5"></ComboBox>
            
            <TextBlock HorizontalAlignment="Left" Margin="5">Aantal dagen</TextBlock>
            <ComboBox Name="aantalDagenComboBox" Margin="5"></ComboBox>
            
            <TextBlock HorizontalAlignment="Left" Margin="5"> Prijs</TextBlock>
            <TextBox Name="prijsTextBox" Margin="5" IsEnabled="False"></TextBox>
        </StackPanel>
    </Grid>
</Window>
 